/* Chat Widget Styles - Google Chat Like */

:root {
    --chat-primary: #d4af37;
    --chat-primary-dark: #b8941f;
    --chat-bg: #ffffff;
    --chat-border: #e5e7eb;
    --chat-hover: #f3f4f6;
    --chat-text: #1f2937;
    --chat-text-secondary: #6b7280;
    --chat-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

/* Chat Toggle Button */
#chat-toggle-btn {
    position: fixed;
    bottom: 24px;
    right: 24px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--chat-primary), var(--chat-primary-dark));
    border: none;
    box-shadow: var(--chat-shadow);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #111;
    font-size: 28px;
    z-index: 9999;
    transition: all 0.3s ease;
}

#chat-toggle-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2);
}

#chat-toggle-btn .chat-unread-badge {
    position: absolute;
    top: -4px;
    right: -4px;
    background: #ef4444;
    color: white;
    font-size: 12px;
    font-weight: 700;
    padding: 4px 8px;
    border-radius: 12px;
    min-width: 24px;
    text-align: center;
}

/* Chat Widget Container */
#chat-widget {
    position: fixed;
    bottom: 100px;
    right: 24px;
    width: 420px;
    height: 600px;
    background: var(--chat-bg);
    border-radius: 16px;
    box-shadow: var(--chat-shadow);
    display: none;
    flex-direction: column;
    z-index: 9998;
    overflow: hidden;
    animation: slideUp 0.3s ease;
}

#chat-widget.show {
    display: flex;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Chat Header */
.chat-header {
    padding: 16px 20px;
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(212, 175, 55, 0.2);
}

.chat-header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
}

.chat-header-actions {
    display: flex;
    gap: 12px;
}

.chat-header-actions button {
    background: transparent;
    border: none;
    color: white;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 18px;
    transition: background 0.2s;
}

.chat-header-actions button:hover {
    background: rgba(255, 255, 255, 0.1);
}

/* Chat Search */
.chat-search {
    padding: 12px;
    border-bottom: 1px solid var(--chat-border);
}

.chat-search input {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid var(--chat-border);
    border-radius: 8px;
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s;
}

.chat-search input:focus {
    border-color: var(--chat-primary);
}

/* Chat Conversations List */
.chat-conversations {
    flex: 1;
    overflow-y: auto;
    padding: 8px;
}

.chat-conversations::-webkit-scrollbar {
    width: 6px;
}

.chat-conversations::-webkit-scrollbar-thumb {
    background: var(--chat-primary);
    border-radius: 4px;
}

.conversation-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s;
    position: relative;
}

.conversation-item:hover {
    background: var(--chat-hover);
}

.conversation-item.active {
    background: rgba(212, 175, 55, 0.1);
}

.conversation-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--chat-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #111;
    font-weight: 700;
    font-size: 18px;
    flex-shrink: 0;
}

.conversation-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
}

.conversation-info {
    flex: 1;
    min-width: 0;
}

.conversation-name {
    font-weight: 600;
    font-size: 14px;
    color: var(--chat-text);
    margin-bottom: 4px;
}

.conversation-last-message {
    font-size: 13px;
    color: var(--chat-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.conversation-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
    flex-shrink: 0;
}

.conversation-time {
    font-size: 12px;
    color: var(--chat-text-secondary);
}

.conversation-unread {
    background: var(--chat-primary);
    color: #111;
    font-size: 11px;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 20px;
    text-align: center;
}

/* Chat Messages View */
.chat-messages-view {
    display: none;
    flex-direction: column;
    height: 100%;
}

.chat-messages-view.active {
    display: flex;
}

.chat-messages-header {
    padding: 12px 16px;
    border-bottom: 1px solid var(--chat-border);
    display: flex;
    align-items: center;
    gap: 12px;
}

.chat-back-btn {
    background: transparent;
    border: none;
    font-size: 20px;
    cursor: pointer;
    padding: 4px;
    color: var(--chat-text);
}

.chat-messages-header .conversation-avatar {
    width: 40px;
    height: 40px;
    font-size: 16px;
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.message-item {
    display: flex;
    gap: 8px;
    max-width: 80%;
}

.message-item.own {
    align-self: flex-end;
    flex-direction: row-reverse;
}

.message-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--chat-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #111;
    font-weight: 600;
    font-size: 14px;
    flex-shrink: 0;
}

.message-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
}

.message-content {
    background: var(--chat-hover);
    padding: 10px 14px;
    border-radius: 12px;
    max-width: 100%;
}

.message-item.own .message-content {
    background: linear-gradient(135deg, var(--chat-primary), var(--chat-primary-dark));
    color: #111;
}

.message-sender {
    font-weight: 600;
    font-size: 12px;
    color: var(--chat-text-secondary);
    margin-bottom: 4px;
}

.message-item.own .message-sender {
    color: rgba(0, 0, 0, 0.7);
}

.message-text {
    font-size: 14px;
    line-height: 1.4;
    word-wrap: break-word;
}

.message-image {
    max-width: 100%;
    border-radius: 8px;
    margin-top: 4px;
}

.message-file {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 8px;
    margin-top: 4px;
    cursor: pointer;
}

.message-file i {
    font-size: 24px;
}

.message-time {
    font-size: 11px;
    color: var(--chat-text-secondary);
    margin-top: 4px;
}

.message-item.own .message-time {
    color: rgba(0, 0, 0, 0.6);
}

/* Chat Input */
.chat-input-container {
    padding: 12px 16px;
    border-top: 1px solid var(--chat-border);
    display: flex;
    gap: 8px;
    align-items: flex-end;
}

.chat-input-wrapper {
    flex: 1;
    position: relative;
}

#chat-message-input {
    width: 100%;
    padding: 10px 40px 10px 12px;
    border: 1px solid var(--chat-border);
    border-radius: 24px;
    font-size: 14px;
    resize: none;
    max-height: 100px;
    outline: none;
    transition: border-color 0.2s;
}

#chat-message-input:focus {
    border-color: var(--chat-primary);
}

.chat-attach-btn {
    position: absolute;
    right: 8px;
    bottom: 8px;
    background: transparent;
    border: none;
    color: var(--chat-text-secondary);
    cursor: pointer;
    padding: 4px 8px;
    font-size: 18px;
}

.chat-attach-btn:hover {
    color: var(--chat-primary);
}

#chat-send-btn {
    background: linear-gradient(135deg, var(--chat-primary), var(--chat-primary-dark));
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    color: #111;
    font-size: 18px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s;
}

#chat-send-btn:hover {
    transform: scale(1.1);
}

#chat-send-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* New Chat Modal */
.chat-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 10000;
}

.chat-modal.show {
    display: flex;
}

.chat-modal-content {
    background: white;
    border-radius: 16px;
    width: 90%;
    max-width: 500px;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
}

.chat-modal-header {
    padding: 20px;
    border-bottom: 1px solid var(--chat-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.chat-modal-header h4 {
    margin: 0;
    font-size: 18px;
}

.chat-modal-close {
    background: transparent;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: var(--chat-text-secondary);
}

.chat-modal-body {
    padding: 20px;
    overflow-y: auto;
}

.user-select-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s;
}

.user-select-item:hover {
    background: var(--chat-hover);
}

.user-select-item input[type="checkbox"] {
    width: 18px;
    height: 18px;
}

/* Loading State */
.chat-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    color: var(--chat-text-secondary);
}

.chat-loading i {
    font-size: 32px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

/* Empty State */
.chat-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    color: var(--chat-text-secondary);
    text-align: center;
}

.chat-empty i {
    font-size: 64px;
    opacity: 0.3;
    margin-bottom: 16px;
}

.chat-empty p {
    margin: 0;
    font-size: 14px;
}

/* Responsive */
@media (max-width: 768px) {
    #chat-widget {
        width: calc(100vw - 32px);
        height: calc(100vh - 140px);
        right: 16px;
        bottom: 90px;
    }
}
